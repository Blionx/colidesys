{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Depurar MiProyectoC++",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",  // Ruta al ejecutable generado
      "args": [],  // Si tienes argumentos de línea de comandos, agrégalos aquí
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",  // Directorio de trabajo actual
      "environment": [
      ],
      "externalConsole": false,  // Si quieres usar una consola externa, cambia a true
      "MIMode": "gdb",
      "miDebuggerPath": "C:/mingw/bin/gdb.exe",  // Ruta al depurador gdb.exe dentro de MinGW
      "setupCommands": [
          {
              "description": "Habilitar el formateo automático para gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          }
      ],
      "preLaunchTask": "CMake: build",  // Tarea que se ejecuta antes de iniciar la depuración
      "internalConsoleOptions": "openOnSessionStart",  // Abrir la consola interna al iniciar la depuración
    },
    {
      "name": "Debug",
      "type": "cppvsdbg",
      "request": "launch",
      // Resolved by CMake Tools:
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          // add the directory where our target was built to the PATHs
          // it gets resolved by CMake Tools:
          "name": "PATH",
          "value": "$PATH:${command:cmake.launchTargetDirectory}"
        },
        {
          "name": "OTHER_VALUE",
          "value": "Something something"
        }
      ],
      "externalConsole": false,
      "preLaunchTask": "build",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}